{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "lib": [
      "es6",
      "dom",
      "esnext"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
